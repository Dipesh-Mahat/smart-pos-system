{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "frontend/public",
  "routes": [
    {
      "src": "/mobile-scanner",
      "dest": "/mobile-scanner.html"
    },
    {
      "src": "/api/(.*)",
      "dest": "https://smart-pos-system.onrender.com/api/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}